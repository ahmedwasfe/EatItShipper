<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <View
            android:id="@+id/img_place_holder"
            android:layout_width="80dp"
            android:layout_height="85dp"
            android:background="@color/colorPlaceHolder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/text_place_holder1"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:background="@color/colorPlaceHolder"
            android:textSize="20sp"
            android:textColor="@color/colorButton"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10sp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_place_holder"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/text_place_holder2"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:background="@color/colorPlaceHolder"
            android:textSize="20sp"
            android:textColor="@color/colorButton"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10sp"
            android:padding="8dp"
            app:layout_constraintStart_toEndOf="@id/img_place_holder"
            app:layout_constraintTop_toBottomOf="@id/text_place_holder1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>